<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brizingr16gecr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.DashboardActivity"/>
        <activity
            android:screenOrientation="portrait"
            android:parentActivityName="com.brizingr16gecr.activities.DashboardActivity"
            android:name="com.brizingr16gecr.activities.AboutBrizingr" />
        <activity
            android:screenOrientation="portrait"
            android:parentActivityName="com.brizingr16gecr.activities.DashboardActivity"
            android:name="com.brizingr16gecr.activities.Event" />
        <activity
            android:parentActivityName="com.brizingr16gecr.activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.Schedule" />
        <activity
            android:parentActivityName="com.brizingr16gecr.activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.ContactUs" />
        <activity
            android:parentActivityName="com.brizingr16gecr.activities.Event"
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.DisplayEvent" />
        <activity
            android:parentActivityName="com.brizingr16gecr.activities.DisplayEvent"
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.EventDetailsActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.ImageViewerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:parentActivityName="com.brizingr16gecr.activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.GalleryActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.brizingr16gecr.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
